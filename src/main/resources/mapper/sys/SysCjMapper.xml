<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.sys.dao.SysCjDao">
<sql id="queryWhereId">
 		<where>
 			<if test="name=null and name!=''">
 				name like concat ("%",#{name},"%")
 			</if>
 		</where>
 	</sql>
 	<select id="findPageObjects" resultType="com.cy.sys.pojo.SysCj">
 	select id,name,cjTitle,cjType,cjContent,cjMoney,createTime from sys_cj
 	<include refid="queryWhereId"/>
 		order by createTime desc
 		limit #{startIndex},#{pageSize}
 	</select>
 	<select id="getRowCounts" resultType="int">
       select count(*)
       from sys_cj
       <include refid="queryWhereId"/>
   </select>
	<insert id="insertObject"  parameterType="com.cy.sys.pojo.SysCj">
         insert into sys_cj
         (id,name,cjTitle,cjType,cjContent,cjMoney,createTime)
         values
         (null,#{name},#{cjTitle},#{cjType},#{cjContent},#{cjMoney},#{createTime})
    </insert>
	




</mapper>